<Window x:Class="Oefening_4_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oefening_4_11"
        mc:Ignorable="d"
        Title="Decimal to Binary converter" Height="350" Width="525">
    <Grid>
        <TextBox Name="InputBox_TextBox" HorizontalAlignment="Left" Height="23" Margin="57,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="132"/>
        <Label Name="inputLabel_Label" Content="_Insert decimal number" HorizontalAlignment="Left" Margin="57,97,0,0" VerticalAlignment="Top" Width="132" Target="{Binding ElementName=InputBox_TextBox}"/>
        <Button Name="convertButton_Button" Content="Convert!" HorizontalAlignment="Left" Margin="57,151,0,0" VerticalAlignment="Top" Width="75" Click="convertButton_Button_Click"/>
        <Label Name="binaryLabel_Label" Content="Binary Number" HorizontalAlignment="Left" Margin="272,123,0,0" VerticalAlignment="Top" Width="131"/>

    </Grid>
</Window>
